{
    "id": "neo4j",
    "version": "1.0.0",
    "meta": {
        "label": "Neo4j",
        "description": "Interact with the Neo4j graph database",
        "author": "Dataiku (Thomas)",
        "icon": "icon-folder-close",
        "iconColor": "green",
        "licenseInfo": "Apache Software License",
        "url": "https://www.dataiku.com/dss/plugins/info/neo4j.html",
        "tags": ["Graph", "Connector"]
    },
    "params": [
        {
            "name": "neo4jUri",
            "label": "URI",
            "description": "URI of the Neo4j database (bolt://...)",
            "type": "STRING",
            "mandatory": true
        },
        {
            "name": "neo4jUsername",
            "label": "Username",
            "description": "Username to connect to the Neo4j database",
            "type": "STRING",
            "mandatory": true
        },
        {
            "name": "neo4jPassword",
            "label": "Password",
            "description": "Password to connect to the Neo4j database",
            "type": "PASSWORD",
            "mandatory": true
        },
        {
            "name": "neo4jImportDir",
            "label": "Neo4j Import Directory",
            "type": "STRING",
            "description": "Check https://neo4j.com/docs/operations-manual/current/configuration/file-locations/",
            "mandatory": true,
            "defaultValue": "/var/lib/neo4j/import/"
        },
        {
            "name": "neo4jIsRemote",
            "label": "Remote Neo4j server",
            "type": "BOOLEAN",
            "description": "If Neo4j is on another machine than DSS data must be sent over SSH"
        },
        {
            "name": "sshHost",
            "label": "SSH Host",
            "type": "STRING",
            "description": "IP or name of the server",
            "visibilityCondition": "model.neo4jIsRemote"
        },
        {
            "name": "sshUsername",
            "label": "SSH User",
            "type": "STRING",
            "description": "",
            "visibilityCondition": "model.neo4jIsRemote"
        }
    ]
}