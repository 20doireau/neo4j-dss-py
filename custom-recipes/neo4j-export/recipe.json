{
    
    "meta" : {
        "label" : "Export Nodes",
        "description" : "Create Neo4j nodes from a Dataiku Dataset",
        "icon" : "icon-puzzle-piece"
    },
    
    "kind" : "PYTHON",
    
    "inputRoles" : [
        {
            "name": "input-dataset",
            "label": "Input Dataset",
            "description": "Dataiku Dataset holding the nodes",
            "arity": "UNARY",
            "required": true,
            "acceptsDataset": true
        }
    ],
    "outputRoles" : [
        {
            "name": "output-folder",
            "label": "Results Folder",
            "description": "Dataiku Folder storing the export log and results",
            "arity": "UNARY",
            "required": true,
            "acceptsManagedFolder": true,
            "acceptsDataset": false
        }
    ],
    
    // The available parameter types are:
    // STRING, INT, DOUBLE, BOOLEAN, PASSWORD, SELECT, MAP, COLUMN, COLUMNS, TEXTAREA
    "params": [
        {
            "label":"Graph settings",
            "type": "SEPARATOR"
        },        
        {
            "name": "graph-nodes-label",
            "label" : "Nodes Label",
            "type": "STRING",
            "description":"Labels for the nodes that will be created",
            "mandatory" : true
        },
        {
            "name": "graph-nodes-delete",
            "label": "Delete nodes"
            "type": "BOOLEAN",
            "description":"Should existing nodes with this label be deleted first?",
            "defaultValue" : false,
            "mandatory" : true
        },

        // A "SELECT" parameter is a multi-choice selector. Choices are specified using the selectChoice field
        {
            "name": "parameter3",
            "type": "SELECT",
            "selectChoices": [
                {
                    "value": "val_x",
                    "label": "display name for val_x"
                },
                {
                    "value": "val_y",
                    "label": "display name for val_y"
                },
            ]
        },

        // A 'COLUMN' parameter is a string, whose value is a column name from an input schema.
        // To specify the input schema whose column names are used, use the "columnRole" field like below.
        // The column names will come from the schema of the first dataset associated to that role.
        {
            "name": "parameter4",
            "type": "COLUMN",
            "columnRole":"input_B_role"
        }

        // The 'COLUMNS' type works in the same way, except that it is a list of strings.
    ],

    // The field "resourceKeys" holds a list of keys that allows to limit the number
    // of concurrent executions and activities triggered by this recipe.
    //
    // Administrators can configure the limit per resource key in the Administration > Settings > Flow build
    // screen.

    "resourceKeys" : []

}
