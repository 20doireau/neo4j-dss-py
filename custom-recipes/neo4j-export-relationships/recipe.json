            "description": "",
            "mandatory": true
        },
        {
            "name": "source_node_properties",
            "label": "Additional properties",
            "type": "COLUMNS",
            "columnRole": "input_dataset",
            "description": "optional",
            "mandatory": false
        },
        {
            "label": "Target",
            "type": "SEPARATOR"
