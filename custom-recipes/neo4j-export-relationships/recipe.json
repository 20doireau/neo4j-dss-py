            "mandatory" : true
        },
        {
            "label": "Source - Relationship -> Target",
            "type": "SEPARATOR"
        },
        {
            "name": "source_node_label",
            "label": "Source nodes label",
            "type": "STRING",
            "description": "",
            "mandatory": true
        },
        {
            "name": "relationships_verb",
