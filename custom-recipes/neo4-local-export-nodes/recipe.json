{

    "meta" : {
        "label" : "Export Nodes (Local)",
        "description" : "Create Neo4j nodes from a Dataiku Dataset when Neo4j and Dataiku are on the same server",
        "icon" : "icon-upload",
        "iconColor": "green"
    },

    "kind" : "PYTHON",
    "selectableFromDataset": "input-dataset",

    "inputRoles" : [
        {
            "name": "input-dataset",
            "label": "Input Dataset",
            "description": "Dataiku Dataset holding the nodes",
            "arity": "UNARY",
            "required": true,
            "acceptsDataset": true
        }
    ],
    "outputRoles" : [
        {
            "name": "output-folder",
            "label": "Results Folder",
            "description": "Dataiku Folder storing the export log and results",
            "arity": "UNARY",
            "required": true,
            "acceptsManagedFolder": true,
            "acceptsDataset": false
        }
    ],

    "params": [

        {
            "label":"Graph Settings",
            "type": "SEPARATOR"
        },
        {
            "name": "graph-nodes-label",
            "label" : "Nodes Label",
            "type": "STRING",
            "description":"Labels for the nodes that will be created",
            "mandatory" : true
        },
        {
            "name": "graph-nodes-delete",
            "label": "Delete Nodes",
            "type": "BOOLEAN",
            "description":"Should existing nodes with this label be deleted first?",
            "mandatory" : true,
            "defaultValue" : false
        },

        {
            "label": "Neo4j Settings",
            "type": "SEPARATOR"
        },
        {
            "name": "neo4j-uri",
            "label" : "Neo4j URI",
            "type": "STRING",
            "description":"Connection URI for Neo4j",
            "mandatory" : true,
            "defaultValue": "bolt://localhost:7687"
        },
        {
            "name": "neo4j-user",
            "label" : "Neo4j User",
            "type": "STRING",
            "description":"Neo4j Username",
            "mandatory" : true,
            "defaultValue": "neo4j"
        },
        {
            "name": "neo4j-password",
            "label" : "Neo4j Password",
            "type": "PASSWORD",
            "description":"Neo4j Password",
            "mandatory" : true
        },
        {
            "name": "neo4j-import-dir",
            "label" : "Neo4j Import Directory",
            "type": "STRING",
            "description":"Neo4j Import Directory",
            "mandatory" : true
        }
    ]
}