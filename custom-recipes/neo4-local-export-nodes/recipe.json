{

    "meta": {
        "label": "Export Nodes (Local)",
        "description": "Create Neo4j nodes from a Dataiku Dataset.\nUse when Neo4j is hosted on the same server as DSS.",
        "icon": "icon-upload",
        "iconColor": "green"
    },

    "kind": "PYTHON",
    "selectableFromDataset": "input_dataset",

    "inputRoles": [
        {
            "name": "input_dataset",
            "label": "Input Dataset",
            "description": "Dataiku Dataset holding the nodes",
            "arity": "UNARY",
            "required": true,
            "acceptsDataset": true
        }
    ],
    "outputRoles": [
        {
            "name": "output_folder",
            "label": "Results Folder",
            "description": "Dataiku Folder storing the export log and results",
            "arity": "UNARY",
            "required": true,
            "acceptsManagedFolder": true,
            "acceptsDataset": false
        }
    ],

    "params": [
        {
            "label": "Graph Settings",
            "type": "SEPARATOR"
        },
        {
            "name": "nodes_label",
            "label": "Nodes label",
            "type": "STRING",
            "description": "",
            "mandatory": true
        },
        {
            "name": "graphNodesDelete",
            "label": "Delete Nodes",
            "type": "BOOLEAN",
            "description": "Should existing nodes with this label be deleted first?",
            "mandatory": true,
            "defaultValue": false
        },

        {
            "label": "Neo4j Settings",
            "type": "SEPARATOR"
        },
        {
            "name": "neo4jImportDir",
            "label": "Neo4j Import Directory",
            "type": "STRING",
            "description": "Neo4j Import Directory",
            "mandatory": true,
            "defaultValue": "/var/lib/neo4j/import/"
        }
    ]
}