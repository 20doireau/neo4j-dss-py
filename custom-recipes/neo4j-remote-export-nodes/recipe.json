{

    "meta" : {
        "label" : "Export Nodes",
        "description" : "Create Neo4j nodes from a Dataiku Dataset.\nUse when Neo4j is hosted on a different server than DSS.",
        "icon": "icon-upload",
        "iconColor": "green"
    },

    "kind" : "PYTHON",
    "selectableFromDataset": "inputDataset",

    "inputRoles" : [
        {
            "name": "inputDataset",
            "label": "Input Dataset",
            "description": "Dataiku Dataset holding the nodes",
            "arity": "UNARY",
            "required": true,
            "acceptsDataset": true
        }
    ],
    "outputRoles" : [
        {
            "name": "outputFolder",
            "label": "Results Folder",
            "description": "Dataiku Folder storing the export log and results",
            "arity": "UNARY",
            "required": true,
            "acceptsManagedFolder": true,
            "acceptsDataset": false
        }
    ],

    "params": [

        {
            "label":"Graph Settings",
            "type": "SEPARATOR"
        },
        {
            "name": "graphNodesLabel",
            "label" : "Nodes Label",
            "type": "STRING",
            "description":"Labels for the nodes that will be created",
            "mandatory" : true
        },
        {
            "name": "graphNodesDelete",
            "label": "Delete Nodes",
            "type": "BOOLEAN",
            "description":"Should existing nodes with this label be deleted first?",
            "mandatory" : true,
            "defaultValue" : false
        },

        {
            "label": "Neo4j Settings",
            "type": "SEPARATOR"
        },
        {
            "name": "neo4jUri",
            "label" : "Neo4j URI",
            "type": "STRING",
            "description":"Connection URI for Neo4j",
            "mandatory" : true,
            "defaultValue": "bolt://localhost:7687"
        },
        {
            "name": "neo4jUsername",
            "label" : "Neo4j User",
            "type": "STRING",
            "description":"Neo4j Username",
            "mandatory" : true,
            "defaultValue": "neo4j"
        },
        {
            "name": "neo4jPassword",
            "label" : "Neo4j Password",
            "type": "PASSWORD",
            "description":"Neo4j Password",
            "mandatory" : true
        },

        {
            "label": "Neo4j Server SSH Settings",
            "type": "SEPARATOR"
        },
        {
            "name": "sshHost",
            "label" : "SSH Host",
            "type": "STRING",
            "description":"IP or name of the server",
            "mandatory" : true
        },
        {
            "name": "sshUser",
            "label" : "SSH User",
            "type": "STRING",
            "description":"SSH Username",
            "mandatory" : true,
            "defaultValue": "neo4j"
        },
        {
            "name": "neo4jImportDir",
            "label" : "Neo4j Import Directory",
            "type": "STRING",
            "description":"Path of the Neo4J import directory",
            "mandatory" : true,
            "defaultValue" : "import"
        }
    ]
}