{

    "meta": {
        "label": "Export relations to a dataset",
        "description": "Create Neo4j nodes and relationships from a single Dataiku dataset.",
        "icon": "icon-visual_export_recipe",
        "iconColor": "green"
    },

    "kind": "PYTHON",
    "selectableFromDataset": "input_dataset",

    "inputRoles": [
        {
            "name": "input_dataset",
            "label": "Input Dataset",
            "description": "Dataiku Dataset holding the nodes and relationships",
            "arity": "UNARY",
            "required": true,
            "acceptsManagedFolder": false,
            "acceptsDataset": true
        }
    ],
    "outputRoles": [
        {
            "name": "output_dataset",
            "label": "Output Dataset",
            "description": "Dataset stored on the Neo4j server",
            "arity": "UNARY",
            "required": true,
            "acceptsManagedFolder": false,
            "acceptsDataset": true
        }
    ],
    "params": [
        {
            "label": "Nodes",
            "type": "SEPARATOR"
        },
        {
            "name": "node_label",
            "label": "Node label",
            "type": "STRING",
            "mandatory": true
        },
        {
            "name": "source_column",
            "label": "Source node column",
            "type": "COLUMN",
            "columnRole": "input_dataset",
            "mandatory": true
        },
        {
            "name": "target_column",
            "label": "Target node column",
            "type": "COLUMN",
            "columnRole": "input_dataset",
            "mandatory": true
        },
        {
            "name": "source_properties",
            "label": "Source node properties",
            "type": "COLUMNS",
            "columnRole": "input_dataset"
        },
        {
            "label": "Relations",
            "type": "SEPARATOR"
        },
        {
            "name": "relation_verb",
            "label": "Relation verb",
            "type": "STRING",
            "mandatory": true
        },
        {
            "name": "relation_properties",
            "label": "Properties of relations",
            "type": "COLUMNS",
            "columnRole": "input_dataset"
        },
        {
            "name": "clear_before_run",
            "label": "Clear before run",
            "type": "BOOLEAN",
            "description": "Nodes with this label (and attached relationships) will be deleted before run",
            "defaultValue": true
        }
    ]
}